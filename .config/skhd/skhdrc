# Open new terminal
cmd - 0x2A : /Applications/Kitty.app/Contents/MacOS/kitty --single-instance -d ~

# Open new browser
cmd - return : /Applications/Google\ Chrome.app/Contents/MacOS/Google\ Chrome --new-window

# Maintain last space for toggling
cmd - escape : export LAST_SPACE=`~/.config/yabai/last-space last`; skhd -k "cmd - $LAST_SPACE"

# Zoom full screen toggle
cmd + shift - f : yabai -m window --toggle zoom-fullscreen

