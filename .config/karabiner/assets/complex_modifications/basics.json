{
  "title": "Basic remappings",
  "rules": [
    {
      "description": "Remap CMD+Q to CMD+W",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "q",
            "modifiers": {
              "mandatory":[
                "left_command"
              ]
            }
          },
          "to": [
            {
              "key_code": "w",
              "modifiers": ["left_command"]
            }
          ]
        }
      ]
    },
    {
      "description": "Mission Control",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "x",
            "modifiers": {
              "mandatory":[
                "left_control",
                "left_shift"
              ]
            }
          },
          "to": [
            {
              "key_code": "mission_control"
            }
          ]
        }
      ]
    },
    {
      "description": "LeftCommand + Escape to Grave/Tilde",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "escape",
            "modifiers": {
              "mandatory":[
                "left_control"
              ],
              "optional": [
                "left_shift"
              ]
            }
          },
          "to": [
            {
              "key_code": "grave_accent_and_tilde"
            }
          ]
        }
      ]
    }

  ]
}
